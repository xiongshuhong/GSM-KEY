<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#1693FF"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="48dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:gravity="center" >

            <ImageButton
                android:id="@+id/ib_title_back"
                android:layout_width="48dp"
                android:visibility="visible"
                android:layout_height="fill_parent"
                android:background="@drawable/dra_comm_btn"
                android:scaleType="centerInside"
                android:src="@drawable/ic_title_back"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="标题"
            style="@style/TitleTextStyle_18" />

        <FrameLayout
            android:id="@+id/fl_title_right"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:background="@drawable/dra_comm_btn"
            android:paddingLeft="@dimen/padding_01"
            android:paddingRight="@dimen/padding_01" >

            <TextView
                android:id="@+id/tv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/TitleTextStyle_18" />

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
    </RelativeLayout>

    <View
        android:layout_below="@id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line" />

</RelativeLayout>