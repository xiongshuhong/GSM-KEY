<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/margin_step_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="GPRS"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <RadioGroup android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_main">
            <RadioButton android:id="@+id/rb_on"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:checked="true"
                android:text="@string/on"/>
            <RadioButton android:id="@+id/rb_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:checked="false"
                android:text="@string/off"/>"
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_step_12"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="Device Number"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_device_number"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="match_parent"
            android:inputType="phone"
            android:layout_height="40dp"
            android:hint="Input Device Number" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_step_12"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="User Name"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_user_name"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Input User Name" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/margin_step_12"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="Password"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_password"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Input Password" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="Server IP"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_server_ip"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Input Server IP" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="Server PORT"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_server_port"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="9041"
            android:hint="9041" />
    </LinearLayout>
</LinearLayout>