<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:background="@drawable/view_back_image"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_vertical"
        android:background="@drawable/navigation_back_ground"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip"
        android:layout_margin="5.0dip" />
    <RelativeLayout android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/edit_phone"
        android:layout_width="fill_parent"
        android:layout_height="30.0dip">
        <TextView android:textSize="18.0dip"
            android:textColor="@color/red"
            android:id="@+id/bind_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2.0dip"
            android:layout_marginTop="5.0dip"
            android:text="@string/access_control_no"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <GridView android:gravity="center"
        android:id="@+id/my_grid"
        android:paddingLeft="48.0dip"
        android:paddingRight="48.0dip"
        android:layout_width="fill_parent"
        android:layout_height="0.0px"
        android:layout_gravity="center"
        android:layout_marginTop="0.0dip"
        android:horizontalSpacing="20.0dip"
        android:verticalSpacing="20.0dip"
        android:stretchMode="columnWidth"
        android:columnWidth="20.0dip"
        android:numColumns="2"
        android:layout_weight="1.0" />
    <RelativeLayout android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_margin="5.0dip"
        android:layout_marginTop="10.0dip">
        <Button android:id="@+id/home_setting"
            android:background="@drawable/home_setting_but_selector"
            android:layout_width="100.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentLeft="true" />
        <Button android:id="@+id/home_exit"
            android:background="@drawable/home_exit_but_selector"
            android:layout_width="100.0dip"
            android:layout_height="40.0dip"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
