<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/edit_pwd">
    <LinearLayout android:orientation="horizontal" android:id="@+id/old_pwd_linear" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:text="@string/old_password"
            android:textColor="@color/white"/>
        <EditText android:id="@+id/old_pwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:maxLength="6"
            android:hint="Only Enter 6 digits"
            android:inputType="phone"
            android:digits="0123456789" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:text="@string/new_password"
            android:textColor="@color/white" />
        <EditText android:id="@+id/new_pwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:maxLength="6"
            android:hint="Only Enter 6 digits"
            android:inputType="phone"
            android:digits="0123456789" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:text="@string/new_password"
            android:textColor="@color/white"/>
        <EditText android:id="@+id/re_pwd_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:maxLength="6"
            android:hint="Only Enter 6 digits"
            android:inputType="phone"
            android:digits="0123456789"/>
    </LinearLayout>
</LinearLayout>
