<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="SERIAL NO"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_serial_no"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:digits="0123456789"
            android:maxLength="3"
            android:inputType="number"
            android:hint="Input Serial No.(01 to 50)" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_step_12"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="SHL NO"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_shl_no"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:digits="0123456789"
            android:inputType="number"
            android:hint="Input SHL NO" />
    </LinearLayout>
    <include layout="@layout/view_week_day"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_step_12"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="START TIME"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:text="HOUR"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text=":"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="14sp"
            android:text="MINUTE"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="START TIME"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_start_time_h"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="40dp"
            android:textColor="@color/color_666666"
            android:text="00"
            android:maxLength="2"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:text=":"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_start_time_min"
            android:textSize="14sp"
            android:inputType="number"
            android:digits="0123456789"
            android:layout_width="60dp"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:layout_height="40dp"
            android:text="59"
            android:maxLength="2"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_step_12"
        android:paddingLeft="@dimen/margin_step_16"
        android:paddingRight="@dimen/margin_step_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:text="END TIME"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_end_time_h"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/margin_step_12"
            android:textColor="@color/color_666666"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:text="23"
            android:maxLength="2" />
        <TextView
            android:layout_gravity="center_vertical"
            android:text=":"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/et_end_time_min"
            android:textSize="14sp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:textColor="@color/color_666666"
            android:gravity="center"
            android:inputType="number"
            android:digits="0123456789"
            android:text="59"
            android:maxLength="2" />
    </LinearLayout>
</LinearLayout>